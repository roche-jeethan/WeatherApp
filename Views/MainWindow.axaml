<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WeatherApp.ViewModels"
        xmlns:conv="using:WeatherApp.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="WeatherApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Weather App"
        Width="500" Height="600">

    <Window.Resources>
        <conv:StringNotNullOrEmptyConverter x:Key="StringNotNullOrEmptyConverter"/>
    </Window.Resources>

    <Grid RowDefinitions="Auto,Auto,*" Margin="20">
        <!-- Search Bar -->
        <Grid Grid.Row="0" ColumnDefinitions="*" Margin="0,0,0,20">
            <TextBox Grid.Column="0"
                     Text="{Binding CityName}"
                     Watermark="Enter city name...">
                <TextBox.KeyBindings>
                    <KeyBinding Command="{Binding SearchCommand}"
                               Gesture="Enter"/>
                </TextBox.KeyBindings>
            </TextBox>
        </Grid>

        <!-- Location Display -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding Location}"
                   FontSize="28"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Weather Information -->
        <Border Grid.Row="2"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
                <!-- Loading Indicator -->
                <ProgressBar Grid.Row="0"
                            IsVisible="{Binding IsLoading}"
                            IsIndeterminate="True"
                            Margin="0,0,0,10"/>

                <!-- Error Message -->
                <TextBlock Grid.Row="1"
                          Text="{Binding ErrorMessage}"
                          IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                          Foreground="Red"
                          TextWrapping="Wrap"
                          Margin="0,0,0,10"/>

                <!-- Weather Data -->
                <StackPanel Grid.Row="2" Spacing="10">
                    <TextBlock Text="{Binding Temperature}"
                             FontSize="48"
                             HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="{Binding TempRange}"
                             FontSize="16"
                             HorizontalAlignment="Center"/>
                             
                    <TextBlock Text="{Binding Description}"
                             FontSize="20"
                             HorizontalAlignment="Center"/>
                             
                    <StackPanel Orientation="Horizontal" 
                                Spacing="20"
                                HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Humidity}"
                                 FontSize="16"/>
                        <TextBlock Text="{Binding Pressure}"
                                 FontSize="16"/>
                        <TextBlock Text="{Binding Wind}"
                                 FontSize="16"/>
                    </StackPanel>
                    
                    <TextBlock Text="{Binding SunTimes}"
                             FontSize="16"
                             HorizontalAlignment="Center"
                             Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Separator -->
                <Separator Grid.Row="3" Margin="0,20"/>

                <!-- Gemini Advice -->
                <TextBlock Grid.Row="4"
                          Text="{Binding GeminiAdvice}"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          FontSize="16"/>
            </Grid>
        </Border>
    </Grid>
</Window>